<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="ListViewDemo.TableView">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Basic">
                    <TextCell Text="Name" Detail="De, Rana">
                    </TextCell>
                    <EntryCell Label="Title" Placeholder="Ex:"></EntryCell>
                    <SwitchCell Text="Notification" On="True"></SwitchCell>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal"  Padding="30,0">
                            <Label Text="Starts" VerticalOptions="Center"></Label>
                            <DatePicker Date="1 Jan 2024" HorizontalOptions="EndAndExpand"></DatePicker>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>