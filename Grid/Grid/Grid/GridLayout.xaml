<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grid.GridLayout">
    <Grid BackgroundColor="Yellow" RowSpacing="40" ColumnSpacing="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Text="label1" Grid.Row="0" Grid.Column="0" BackgroundColor="Silver"></Label>
        <Label Text="label2" Grid.Row="0" Grid.Column="1" BackgroundColor="Silver"></Label>
        <Label Text="label3" Grid.Row="1" Grid.Column="0" BackgroundColor="Silver"></Label>
        <Label Text="label4" Grid.Row="1" Grid.Column="1" BackgroundColor="Silver"></Label>
        <Label Text="ColSpan" Grid.Row="2" Grid.ColumnSpan="3" BackgroundColor="Silver"></Label>
        <Label Text="RowSpan" Grid.RowSpan="3" Grid.Column="2" BackgroundColor="Silver"></Label>

    </Grid>
</ContentPage>